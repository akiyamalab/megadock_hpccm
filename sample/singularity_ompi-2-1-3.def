# 
# HPC Base image
# 
# Contents:
#   CUDA version 10.0
#   OPA/infiniband Basic Driver (upstream)
#   GNU compilers (upstream)
#   FFTW version 3.3.8 (default)
#   OpenMPI version 3.1.3 (default)
# 

BootStrap: docker
From: nvidia/cuda:10.0-devel-centos7
%post
    . /.singularity.d/env/10-docker*.sh

%post
    yum install -y \
        cuda-samples-10-0 \
        hwloc-libs \
        infinipath-psm \
        libfabric \
        libhfil \
        libibverbs \
        libibverbs-devel \
        libpsm2 \
        libsysfs-devel \
        numactl-libs \
        opa-basic-tools \
        rdma-core \
        ssh
    rm -rf /var/cache/yum/*

# GNU compiler
%post
    yum install -y \
        gcc \
        gcc-c++ \
        gcc-gfortran
    rm -rf /var/cache/yum/*

# FFTW version 3.3.8
%post
    yum install -y \
        file \
        make \
        wget
    rm -rf /var/cache/yum/*
%post
    cd /
    mkdir -p /var/tmp && wget -q -nc --no-check-certificate -P /var/tmp ftp://ftp.fftw.org/pub/fftw/fftw-3.3.8.tar.gz
    mkdir -p /var/tmp && tar -x -f /var/tmp/fftw-3.3.8.tar.gz -C /var/tmp -z
    cd /var/tmp/fftw-3.3.8 &&  CC=gcc CXX=g++ F77=gfortran F90=gfortran FC=gfortran ./configure --prefix=/usr/local/fftw --enable-float --enable-sse2
    make -j$(nproc)
    make -j$(nproc) install
    rm -rf /var/tmp/fftw-3.3.8.tar.gz /var/tmp/fftw-3.3.8
%environment
    export LD_LIBRARY_PATH=/usr/local/fftw/lib:$LD_LIBRARY_PATH
%post
    export LD_LIBRARY_PATH=/usr/local/fftw/lib:$LD_LIBRARY_PATH

# OpenMPI version 2.1.3
%post
    yum install -y \
        bzip2 \
        file \
        hwloc \
        make \
        numactl-devel \
        openssh-clients \
        perl \
        tar \
        wget
    rm -rf /var/cache/yum/*
%post
    cd /
    mkdir -p /var/tmp && wget -q -nc --no-check-certificate -P /var/tmp https://www.open-mpi.org/software/ompi/v2.1/downloads/openmpi-2.1.3.tar.bz2
    mkdir -p /var/tmp && tar -x -f /var/tmp/openmpi-2.1.3.tar.bz2 -C /var/tmp -j
    cd /var/tmp/openmpi-2.1.3 &&  CC=gcc CXX=g++ F77=gfortran F90=gfortran FC=gfortran ./configure --prefix=/usr/local/openmpi --enable-mpi-cxx --with-cuda --with-verbs
    make -j$(nproc)
    make -j$(nproc) install
    rm -rf /var/tmp/openmpi-2.1.3.tar.bz2 /var/tmp/openmpi-2.1.3
%environment
    export LD_LIBRARY_PATH=/usr/local/openmpi/lib:$LD_LIBRARY_PATH
    export PATH=/usr/local/openmpi/bin:$PATH
%post
    export LD_LIBRARY_PATH=/usr/local/openmpi/lib:$LD_LIBRARY_PATH
    export PATH=/usr/local/openmpi/bin:$PATH

%files
    ./megadock-5.0 /workspace

%files
    ./Makefile /workspace/Makefile

%post
    cd /
    cd /workspace
    make -j$(nproc)


